<style>
  form {
    background: #e1e1e1;
    border-radius: 1em;
  }
</style>

<div class="row justify-content-md-center">
  <div class="col-md-4 col-xs-12 mt-4">
    <h2 class="mb-4"><b>Identificación de usuario</b></h2>
    <form class="p-4" action="/login" method="post">
      <div class="form-group mb-4">
        <label for="login_email">Email</label>
        <input type="email" class="form-control" id="login_email" name="email" aria-describedby="emailHelp" placeholder="Email" required="required">
      </div>

      <div class="form-group mb-4">
        <label for="login_password">Clave</label>
        <input type="password" class="form-control" id="login_password" name="password" required="required">
      </div>

      <div class="form-group mb-4">
        <label class="form-check-label" for="exampleCheck1">Registrar nuevo usuario</label>
      </div>
      
      <button type="submit" class="btn btn-success"><i class="fas fa-sign-in-alt"></i> Ingresar</button>
      <a href="/register" class="btn btn-primary">Registrarse</a>
      <a href="/githubcallback" class="btn btn-primary">Iniciar sesión con GitHub</a>
      
      <!-- Mostrar mensaje de bienvenida y nombre del usuario -->
        {{#if user}}
        <div class="alert alert-success mt-4" role="alert">
          Bienvenido, {{user.first_name}} {{user.last_name}}!
        </div>
        {{/if}}


      
      {{#if error}}
      <div class="alert alert-danger mt-4" role="alert">{{error}}</div>
      {{/if}}
    </form>
  </div>
</div>

<script>
  document.getElementById('login_email').focus();
</script>