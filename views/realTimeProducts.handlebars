 socket.on('product_added', (product) => {
  console.log(`Nuevo producto recibido: ${JSON.stringify(product)}`);
  // Obtener la lista de productos y agregar el nuevo producto
  const productList = document.getElementById('product-list');
  const productElement = document.createElement('li');
  productElement.innerHTML = `${product.id} - ${product.title} - ${product.description} - ${product.price} - ${product.thumbnail} - ${product.code} - ${product.stock} - ${product.status} - ${product.category}`;
  productList.appendChild(productElement);
});


});

    

  
