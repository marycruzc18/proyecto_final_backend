<body>
  <div class="container-fluid">
  <div class="row">
    <div class="col-12 m-t 3">
        <h1>Productos</h1>
        <ul id="product-list">
          
        {{#each products}}
          <li>{{id}} - {{title}} - {{description}} - {{price}} - {{thumbnail}} - {{code}}- {{stock}} - {{status}}- {{category}}</li>
        {{/each}}
      
      </ul>
    </div>
</div>

</div>
